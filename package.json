{
  "name": "acquisitions",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "type": "module",
  "keywords": [],
  "author": "loanmatteusz",
  "license": "ISC",
  "imports": {
    "#config/*": ["src/config/*"],
    "#controllers/*": ["src/controllers/*"],
    "#middlewares/*": ["src/middlewares/*"],
    "#models/*": ["src/models/*"],
    "#routes/*": ["src/routes/*"],
    "#services/*": ["src/services/*"],
    "#utils/*": ["src/utils/*"],
    "#validations/*": ["src/validations/*"]
  },
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "docker:dev": "docker-compose -f docker-compose.dev.yml --env-file .env.development up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down -v",
    "docker:prod": "docker-compose -f docker-compose.prod.yml --env-file .env.production up --build -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:build:dev": "docker-compose -f docker-compose.dev.yml build",
    "docker:build:prod": "docker-compose -f docker-compose.prod.yml build",
    "docker:logs:dev": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:logs:prod": "docker-compose -f docker-compose.prod.yml logs -f"
  },
  "dependencies": {
    "@arcjet/inspect": "^1.0.0-beta.13",
    "@arcjet/node": "^1.0.0-beta.13",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.7.2",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}

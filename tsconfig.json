{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "#config/*": ["src/config/*"],
      "#controllers/*": ["src/controllers/*"],
      "#middlewares/*": ["src/middlewares/*"],
      "#models/*": ["src/models/*"],
      "#routes/*": ["src/routes/*"],
      "#services/*": ["src/services/*"],
      "#utils/*": ["src/utils/*"],
      "#validations/*": ["src/validations/*"],
    }
  },
  "include": ["src/**/*"]
}

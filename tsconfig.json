{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "#config/*": ["src/config/*"],
      "#routes/*": ["src/routes/*"],
    }
  },
  "include": ["src/**/*"]
}
